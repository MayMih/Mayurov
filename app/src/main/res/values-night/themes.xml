<resources>
    <!-- Base application theme. -->
    <style name="Theme.TinkoffKino" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/neo_light</item>
        <item name="colorPrimaryVariant">@color/neo_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_light</item>
        <item name="colorSecondaryVariant">@color/purple_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:homeAsUpIndicator">@drawable/baseline_arrow_back_24</item>
        <item name="colorControlNormal">?colorPrimary</item>
        <item name="colorOutline">?colorPrimaryVariant</item>
        <item name="textOutlineThickness">1dp</item>
    </style>
</resources>